generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Permission {
  id    String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name  String // e.g., "Create User"
  slug  String @unique // e.g., "USER_CREATE"
  roles Role[]
}

model Role {
  id          String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String       @unique // e.g., "ADMIN"
  users       User[]
  permissions Permission[]
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String   @unique
  name      String
  password  String
  status    String   @default("Active")
  mustChangePassword Boolean @default(false)
  roleId    String?  @db.Uuid
  role      Role?    @relation(fields: [roleId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================
// STUDIO MANAGEMENT MODELS
// ============================================

enum PackageCategory {
  WEDDING
  BIRTHDAY
  COMMERCIAL
  CORPORATE
  MATERNITY
  PRE_WEDDING
  ENGAGEMENT
  BABY_SHOWER
  OTHER
}

enum PackageItemType {
  PRODUCT // For items with pages, size, and quantity (e.g., Albums, Frames)
  EVENT   // For coverage and ceremonies (e.g., Wedding Day, Pre-shoot)
}

model Package {
  id          String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  category    PackageCategory
  name        String
  description String?         @db.Text
  basePrice   Decimal         @map("base_price") @db.Decimal(10, 2)
  isActive    Boolean         @default(true) @map("is_active")
  
  // Relationships
  items       PackageItem[]
  
  // Timestamps
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")
  deletedAt   DateTime?       @map("deleted_at")

  @@map("packages")
}

model PackageItem {
  id             String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  packageId      String          @map("package_id") @db.Uuid
  name           String
  type           PackageItemType
  defDimensions  String?         @map("def_dimensions") // e.g., "12x18"
  defPages       Int?            @map("def_pages")
  defQuantity    Int?            @default(1) @map("def_quantity")
  description    String?         @db.Text
  
  package        Package         @relation(fields: [packageId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")

  @@map("package_items")
}

model Client {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  email          String?  @unique
  phone          String?
  address        String?  @db.Text
  internal_notes String?  @db.Text @map("internal_notes") // Private studio notes
  shoots         Shoot[]
  
  // Timestamps
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("clients")
}

// ============================================
// SHOOT MANAGEMENT MODELS
// ============================================

enum ShootStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum ShootItemStatus {
  DESIGNING
  PRINTING
  READY
  DELIVERED
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CHEQUE
}

model Shoot {
  id          String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  clientId    String      @map("client_id") @db.Uuid
  category    PackageCategory
  packageName String      @map("package_name") // Snapshot of package name
  finalPrice  Decimal     @map("final_price") @db.Decimal(10, 2)
  status      ShootStatus @default(PENDING)
  
  description String?     @db.Text
  startDate   DateTime?   @map("start_date")
  
  // Relationships
  client      Client      @relation(fields: [clientId], references: [id])
  items       ShootItem[]
  payments    Payment[]
  
  // Timestamps
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  @@map("shoots")
}

model ShootItem {
  id             String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  shootId        String          @map("shoot_id") @db.Uuid
  name           String
  type           PackageItemType
  dimensions     String?         // Customizable
  pages          Int?            // Customizable
  quantity       Int             @default(1)
  isIncluded     Boolean         @default(true) @map("is_included")
  status         ShootItemStatus @default(DESIGNING)
  description    String?         @db.Text
  
  // Relationships
  shoot          Shoot           @relation(fields: [shootId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")

  @@map("shoot_items")
}

model Payment {
  id          String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  shootId     String        @map("shoot_id") @db.Uuid
  amount      Decimal       @db.Decimal(10, 2)
  method      PaymentMethod
  date        DateTime      @default(now())
  note        String?       @db.Text
  
  // Relationships
  shoot       Shoot         @relation(fields: [shootId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  @@map("payments")
}